<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"

              tools:context=".ui.Activity.SearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/search_background"
        android:gravity="center"
        android:weightSum="10">

        <ImageView
            android:id="@+id/searchBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@drawable/v2_0_fanhuijiantou"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_size_4dp"
            android:layout_marginRight="@dimen/margin_size_4dp"
            android:layout_marginTop="@dimen/margin_size_4dp"
            android:layout_weight="9"
            android:background="@drawable/search_border"
            android:gravity="center_vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/searchKind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:drawableRight="@drawable/v2_0_asearch_jtbai"
                android:text="@string/medicine"
                android:drawablePadding="@dimen/margin_size_4dp"
                android:textColor="@color/font_colour_ff"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/searchName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_size_16dp"
                android:background="@null"
                android:imeOptions="actionSearch"
                android:hint="请输入药品名称"
                android:singleLine="true"
                android:textColor="@color/font_colour_ff"
                android:textColorHint="@color/font_colour_ff"
                android:textSize="@dimen/font_size_16sp"/>
        </LinearLayout>

        <TextView
            android:gravity="center_vertical"
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:text="@string/search"
            android:textColor="@color/white"
            android:textSize="14sp"/>
    </LinearLayout>


    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgrouund">
    </FrameLayout>

</LinearLayout>
