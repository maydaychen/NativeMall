<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <com.loopj.android.image.SmartImageView
        android:id="@+id/iv_item_grid_down_grid_logo"
        android:layout_width="100dp"
        android:src="@drawable/default_product"
        android:layout_height="100dp"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/tv_item_grid_down_grid_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/margin_size_10dp"
        android:layout_marginTop="10dp"
        android:lines="2"
        android:textColor="@color/font_colour_33"
        android:textSize="14sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/tv_item_grid_down_grid_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/font_colour_1515"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_item_grid_down_grid_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/font_size_10sp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/font_colour_99"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="16dp"
        android:background="@color/backgrouund"/>

</LinearLayout>