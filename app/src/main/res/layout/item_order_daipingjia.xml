<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/backgrouund"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_10dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_order_shopname"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/font_size_12sp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_size_10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/font_size_12sp"
            android:layout_margin="@dimen/margin_size_12dp"
            android:text="@string/tv_daipingjia"
            android:textColor="@color/font_colour_ff7d"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_colour_ee"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_item_order_pic"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_colour_ee"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_order_total_price"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_size_12dp"
            android:textColor="@color/font_colour_33"
            android:text="@string/tv_order_total_price"
            android:textSize="@dimen/font_size_10sp"/>

        <TextView
            android:id="@+id/tv_order_total_num"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@id/tv_order_total_price"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/font_colour_99"
            android:layout_marginRight="@dimen/margin_size_8dp"
            android:text="@string/tv_order_num"
            android:textSize="@dimen/font_size_12sp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_colour_ee"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <Button
            android:id="@+id/bt_daipingjia_comment"
            android:layout_width="60dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_size_8dp"
            android:textSize="@dimen/font_size_10sp"
            android:background="@drawable/bt_order_origen"
            android:text="@string/tv_daipingjia_now"
            android:textColor="@color/font_colour_ff7d"/>
    </RelativeLayout>
</LinearLayout>