<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context="com.example.nativeMall.ui.Activity.GoodsDetailActivity">

    <LinearLayout
        android:id="@+id/ll_detail_botton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"

        android:weightSum="6">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/zixun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/v2_0_spxq_zixun"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/zixun"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="咨询"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_size_10dp"
                android:src="@drawable/v2_0_spxq_gouwuche"/>

            <TextView
                android:id="@+id/tv_detail_gouwuche"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/logo"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/gouwuche"/>

            <TextView
                android:id="@+id/tv_goods_detail_gouwuche_num"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="@dimen/margin_size_4dp"
                android:background="@drawable/gouwuche_boder"
                android:gravity="center"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_add_gouwuche"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/gouwuche"
            android:clickable="true"
            android:gravity="center"
            android:text="加入购物车"
            android:textColor="#FAFAFA"
            android:textSize="@dimen/font_size_16sp"/>

        <TextView
            android:id="@+id/tv_buynow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/buy"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/buynow"
            android:textColor="#FAFAFA"
            android:textSize="@dimen/font_size_16sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/goods_detail_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@id/ll_detail_botton"
        android:background="@color/line_colour_ee"/>

    <RelativeLayout
        android:id="@+id/rl_mine_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/search_background">

        <ImageView
            android:id="@+id/iv_choose_doc_back"
            style="@style/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_keyboard_arrow_left_white_24dp"/>

        <TextView
            style="@style/tv_white_24_margin8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/goods_detail"/>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/goods_detail_line"
        android:layout_below="@id/rl_mine_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <android.support.v4.view.ViewPager
                    android:id="@+id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:foregroundGravity="center"/>

                <LinearLayout
                    android:id="@+id/indicator"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="150dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"/>

            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_colour_ee"/>

            <TextView
                android:id="@+id/tv_goods_detail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@color/font_colour_33"
                android:textSize="16sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp">

                <TextView
                    android:id="@+id/tv_goods_detail_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/font_colour_0000"
                    android:textSize="16sp"/>

                <LinearLayout
                    android:id="@+id/ll_goods_detail_shoucang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingRight="16dp">

                    <ImageView
                        android:id="@+id/iv_goods_detail_shoucang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/v2_0_spxq_shoucang"/>

                    <TextView
                        android:id="@+id/tv_shoucang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/shoucang"/>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tv_goods_detail_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_colour_99"/>

                <TextView
                    android:id="@+id/tv_goods_detail_sold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/font_colour_99"/>

                <TextView
                    android:id="@+id/tv_goods_detail_inventory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/font_colour_99"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="@color/line_colour_ee"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/v2_0_spxq_fwzp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="@string/goods_detail_zhengpin"
                    android:textColor="@color/font_colour_99"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/v2_0_spxq_fwth"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="@string/goods_detail_tuihuo"
                    android:textColor="@color/font_colour_99"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/v2_0_spxq_fwys"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="@string/goods_detail_yinsi"
                    android:textColor="@color/font_colour_99"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_colour_ee"/>

            <RelativeLayout
                android:id="@+id/shop_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.loopj.android.image.SmartImageView
                    android:id="@+id/shop_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="10dp"
                    android:src="@drawable/v2_0_spxq_ydlogo"/>

                <LinearLayout
                    android:id="@+id/linear1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/shop_logo">

                    <TextView
                        android:id="@+id/tv_goods_detail_zizhi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/zizhi"
                        android:textColor="@color/font_colour_64"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:src="@drawable/v2_0_spxq_ydzz"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="48dp"
                        android:text="@string/fuwu"
                        android:textColor="@color/font_colour_64"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:src="@drawable/v2_0_spxq_ydgao"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_cemment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linear1"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/shop_logo">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fahuo"
                        android:textColor="@color/font_colour_64"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:src="@drawable/v2_0_spxq_ydgao"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="48dp"
                        android:text="@string/med_miaoshu"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:src="@drawable/v2_0_spxq_ydgao"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_cemment"
                    android:padding="10dp"
                    android:weightSum="2">

                    <com.example.nativeMall.ui.widget.DrawableCenterButton
                        android:id="@+id/bt_goods_detail_all_med"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/goods_detail_line"
                        android:drawableLeft="@drawable/v2_0_spxq_ydyp"
                        android:drawablePadding="@dimen/margin_size_8dp"
                        android:gravity="left|center_vertical"
                        android:text="@string/allmed"
                        android:textColor="@color/font_666"/>

                    <com.example.nativeMall.ui.widget.DrawableCenterButton
                        android:id="@+id/bt_goods_detail_enter_supplier"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/goods_detail_line"
                        android:drawableLeft="@drawable/v2_0_spxq_ydhome"
                        android:drawablePadding="@dimen/margin_size_8dp"
                        android:gravity="left|center_vertical"
                        android:text="@string/jinru"
                        android:textColor="@color/font_666"/>
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_colour_ee"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:paddingLeft="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/goods_detail"
                    android:textColor="@color/font_colour_33"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/iv_detail_pic1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_size_8dp"
                    android:src="@drawable/yisheng_more1"/>

                <ImageView
                    android:id="@+id/iv_detail_pic2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_size_8dp"
                    android:layout_toLeftOf="@id/iv_detail_pic1"
                    android:src="@drawable/yisheng_more2"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_colour_ee"/>

            <WebView
                android:id="@+id/wv_goods_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_colour_ee"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="8dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/goods_detail_comment"
                    android:textColor="@color/font_colour_33"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/iv_detail_pic3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_size_8dp"
                    android:src="@drawable/yisheng_more1"/>

                <ImageView
                    android:id="@+id/iv_detail_pic4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_size_8dp"
                    android:layout_toLeftOf="@id/iv_detail_pic3"
                    android:src="@drawable/yisheng_more2"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_colour_ee"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_goods_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_colour_ee"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
