<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="@dimen/margin_size_16dp"
              android:paddingRight="@dimen/margin_size_16dp"
              android:background="@color/white"
              android:orientation="vertical">

    <TextView
        android:textColor="@color/ffb"
        android:gravity="center_vertical"
        android:id="@+id/tv_fenlei_right_name"
        android:layout_width="wrap_content"
        android:layout_height="40dp"/>

    <TextView
        android:background="@color/line_colour_ee"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="@dimen/margin_size_14dp"
        android:id="@+id/rv_fenlei_right_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>