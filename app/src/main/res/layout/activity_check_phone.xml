<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.nativeMall.ui.Activity.CheckPhoneAct">

    <com.example.nativeMall.ui.widget.CustomTitle
        android:id="@+id/custom_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcLeftIv="@drawable/ic_keyboard_arrow_left_white_24dp"
        app:textTitle="验证手机">

    </com.example.nativeMall.ui.widget.CustomTitle>

    <EditText
        android:id="@+id/et_check_code"
        style="@style/et_font_28px_999"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="@dimen/margin_size_8dp"
        android:background="@null"
        android:gravity="center"
        android:hint="验证码已发送至挂号病人手机号码，请注意查收"
        />

    <Button
        android:id="@+id/btn_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_size_12dp"
        android:layout_marginRight="@dimen/margin_size_12dp"
        android:layout_marginTop="@dimen/margin_size_16dp"
        android:background="@drawable/next_step_bg"
        android:text="提交"
        android:textColor="@color/white"
        />
</LinearLayout>
