<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_8dp"
                android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_address_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_size_10dp">

        <TextView
            android:id="@+id/tv_address_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_colour_33"
            android:textSize="@dimen/font_size_16sp"/>

        <TextView
            android:id="@+id/tv_address_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_18dp"
            android:textColor="@color/font_colour_33"
            android:textSize="@dimen/font_size_16sp"/>

        <TextView
            android:id="@+id/tv_address_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_18dp"
            android:background="@color/blue"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_10sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_address_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_address_name"
        android:background="@color/white"
        android:paddingBottom="@dimen/margin_size_10dp"
        android:paddingLeft="@dimen/margin_size_8dp"
        android:textColor="@color/font_colour_99"/>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tv_address_detail"
        android:background="@color/line_colour_ee"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:weightSum="2">

        <TextView
            android:id="@+id/tv_address_change"
            android:layout_width="@dimen/margin_size_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/margin_size_8dp"
            android:text="@string/change"/>

        <TextView
            android:id="@+id/tv_address_delete"
            android:layout_width="@dimen/margin_size_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/margin_size_8dp"
            android:text="@string/delete"/>
    </LinearLayout>
</RelativeLayout>