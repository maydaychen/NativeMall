<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".ui.Activity.LoginActivity">

    <com.example.nativeMall.ui.widget.CustomTitle
        android:id="@+id/custom_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcLeftIv="@drawable/ic_keyboard_arrow_left_white_24dp"
        app:textTitle="注册">

    </com.example.nativeMall.ui.widget.CustomTitle>

    <ImageView
        android:id="@+id/iv_login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="44dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:src="@drawable/v2_0_login_touxianga"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_size_14dp"
        android:layout_marginRight="@dimen/margin_size_14dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/login_bg">


        <EditText
            android:id="@+id/sign_username"
            style="@style/et_font_28px_999"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@null"
            android:drawableLeft="@drawable/v2_0_login_yhm"
            android:drawablePadding="8dp"

            android:inputType="phone"
            android:paddingLeft="@dimen/margin_size_8dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_yanzhengma"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_margin="@dimen/margin_size_14dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/login_bg"
            >

            <EditText
                android:id="@+id/et_sign_yanzhengma"
                style="@style/et_font_28px_999"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@null"
                android:drawableLeft="@drawable/v2_0_login_yanzm"
                android:drawablePadding="8dp"
                android:paddingLeft="@dimen/margin_size_8dp"/>
        </LinearLayout>

        <Button
            style="@style/tv_font_20px_white"
            android:id="@+id/bt_sign_send_msg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_size_10dp"
            android:layout_weight="1"
            android:background="@drawable/next_step_bg"            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_password"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="@dimen/margin_size_14dp"
        android:layout_marginRight="@dimen/margin_size_14dp"
        android:background="@drawable/login_bg"

        >

        <EditText
            android:id="@+id/password"
            style="@style/et_font_28px_999"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:drawableLeft="@drawable/v2_0_login_mima"
            android:drawablePadding="8dp"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/margin_size_8dp"
            android:paddingRight="@dimen/margin_size_8dp"/>

        <ImageView
            android:id="@+id/iv_password_mingwen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/margin_size_8dp"
            android:src="@drawable/v2_0_login_eyehui"/>

    </RelativeLayout>

    <Button
        android:id="@+id/bt_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_password"
        android:layout_margin="@dimen/margin_size_14dp"
        android:background="@drawable/next_step_bg"

        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/tv_go_to_log"
        style="@style/tv_font_28px_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/margin_size_10dp"
        android:padding="@dimen/margin_size_10dp"/>
</LinearLayout>
