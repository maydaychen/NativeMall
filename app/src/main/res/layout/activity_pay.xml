<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/backgrouund"
                tools:context="com.example.nativeMall.ui.Activity.PayActivity">

    <com.example.nativeMall.ui.widget.MallTitle
        android:id="@+id/rl_confirm_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcLeftIv="@drawable/ic_keyboard_arrow_left_white_24dp"
        app:textTitle="@string/tv_pay_title"/>

    <RelativeLayout
        android:id="@+id/rl_pay_solder"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/rl_confirm_title"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_pay_solder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_size_8dp"
            android:text="@string/tv_solder"
            android:textSize="@dimen/font_size_14sp"/>

        <TextView
            android:id="@+id/tv_pay_solder_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/margin_size_8dp"
            android:textSize="@dimen/font_size_14sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/confirm_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_pay_solder"
        android:background="@color/line_colour_ee"/>

    <RelativeLayout
        android:id="@+id/rl_pay_price"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:layout_below="@id/confirm_line">

        <TextView
            android:id="@+id/tv_pay_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_8dp"
            android:layout_centerVertical="true"
            android:text="@string/tv_money"
            android:textSize="@dimen/font_size_14sp"/>

        <TextView
            android:id="@+id/tv_pay_money_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/margin_size_8dp"
            android:text="@string/tv_tijian_price"
            android:textColor="@color/red"
            android:textSize="@dimen/font_size_14sp"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_pay_kind"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/rl_pay_price"
        android:layout_marginTop="@dimen/margin_size_8dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_size_8dp"
        android:text="@string/tv_pay_kind"
        android:textSize="@dimen/font_size_14sp"/>

    <TextView
        android:id="@+id/pry_kind_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_pay_kind"
        android:background="@color/line_colour_ee"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pry_kind_line"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_margin="@dimen/margin_size_8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/v2_0_spzfdd_zhifubao"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="@dimen/margin_size_8dp"
                    android:text="@string/tv_alipay"
                    android:textSize="@dimen/font_size_14sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/pry_kind_line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tv_pay_kind"
                android:background="@color/line_colour_ee"/>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_margin="@dimen/margin_size_8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/v2_0_spzfdd_weixin"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="@dimen/margin_size_8dp"
                    android:text="@string/tv_weixinpay"
                    android:textSize="@dimen/font_size_14sp"
                    android:id="@+id/textView2"/>
            </LinearLayout>

        </LinearLayout>


        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_size_8dp"
            android:textSize="9pt">

            <RadioButton
                android:id="@+id/rb_alipay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:layout_alignParentRight="true"/>

            <RadioButton
                android:id="@+id/rb_weixinpay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/margin_size_8dp"/>
        </RadioGroup>

    </RelativeLayout>

    <TextView
        android:id="@+id/bt_pay"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/margin_size_8dp"
        android:background="@drawable/textview_boder_blue"
        android:text="@string/tv_paynow"/>

</RelativeLayout>
