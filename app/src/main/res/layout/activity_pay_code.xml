<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical"
    tools:context="com.example.nativeMall.ui.Activity.PayCodeAct"

    >

    <com.example.nativeMall.ui.widget.CustomTitle
        android:id="@+id/custom_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcLeftIv="@drawable/ic_keyboard_arrow_left_white_24dp"
        app:textTitle="付款">

    </com.example.nativeMall.ui.widget.CustomTitle>

    <View
        style="@style/divide_line_horizontal_little_blue"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_size_16dp"
        android:paddingRight="@dimen/margin_size_16dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:background="@drawable/bar_code_bg"
            android:orientation="vertical"
            android:padding="@dimen/margin_size_14dp">

            <ImageView
                android:id="@+id/iv_bar_code"
                android:layout_width="300dp"
                android:layout_height="73dp"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/tv_bar_code"
                style="@style/tv_font_30px_333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_size_10dp"
                />


        </LinearLayout>

        <View
            style="@style/divide_line_horizontal_little_999"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="245dp"
            android:background="@drawable/qr_code_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_qr_code"
                android:layout_width="200dp"
                android:layout_height="200dp"
                />

            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="每分钟自动更新,限当面使用"
                android:drawableLeft="@drawable/v2_0_jkk_eshuaxin"
                android:layout_marginTop="@dimen/margin_size_6dp"/>-->

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
