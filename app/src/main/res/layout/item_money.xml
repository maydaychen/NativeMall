<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="@dimen/margin_size_8dp"
    android:weightSum="4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="@dimen/margin_size_0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/tv_money_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_colour_33"
                android:textSize="@dimen/font_size_16sp"/>

            <TextView
                android:id="@+id/tv_money_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_colour_99"
                android:textSize="@dimen/font_size_16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/margin_size_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/font_blue"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_money_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立减"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_16sp"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>