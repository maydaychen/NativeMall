<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:textColor="@color/font_colour_33"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_size_8dp"
        android:layout_marginTop="@dimen/margin_size_14dp"
        android:layout_marginBottom="@dimen/margin_size_14dp"
        android:id="@+id/tv_gouwuche_outside"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_gouwuche_inside"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/margin_size_8dp"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>